@model IEnumerable<IdrugWeb.Models.CategoriaMedicamentoModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Categoria Medicamento</h1>

<p>
    <a asp-action="Create">Nova Categoria Medicamento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCategoriaMedicamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeCategoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCategoriaMedicamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCategoria)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id=item.IdCategoriaMedicamento }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.IdCategoriaMedicamento }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.IdCategoriaMedicamento })
            </td>
        </tr>
}
    </tbody>
</table>
