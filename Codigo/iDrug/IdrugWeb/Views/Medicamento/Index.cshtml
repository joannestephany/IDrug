@model IEnumerable<IdrugWeb.Models.MedicamentoModel>

@{
    ViewData["Title"] = "Medicamento";
}

<h1>Medicamento</h1>

<p>
    <a asp-action="Create">Novo Medicamento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdMedicamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fabricante)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdMedicamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fabricante)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.IdMedicamento }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.IdMedicamento }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.IdMedicamento })
            </td>
        </tr>
}
    </tbody>
</table>
