@model IEnumerable<IdrugWeb.Models.FarmaciaModel>

@{ ViewData["Title"] = "Farmácias"; }

<h1>Farmácias Parceiras</h1>

<p>
    <a asp-action="Create">Nova Farmácia</a>
    <!--<a asp-action="CreateSolicitacaoFarmacia">Seja nosso parceiro - Cadastre sua Farmacia</a>-->
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bairro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Nome)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Telefone)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Estado)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Cidade)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Bairro)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Status)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.IdFarmacia }) |
        @Html.ActionLink("Detalhes", "Details", new { id = item.IdFarmacia })  
    </td>
</tr>}
    </tbody>
</table>
